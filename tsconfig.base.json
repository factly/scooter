      "@factly/scooter-core": ["packages/scooter-core/src/index.js"],
      "@factly/scooter-embed": ["packages/scooter-embed/src/index.js"],
      "@factly/scooter-heading": ["packages/scooter-heading/src/index.js"],
      "@factly/scooter-image": ["packages/scooter-image/src/index.js"],
      "@factly/scooter-react": ["packages/scooter-react/src/index.js"],
      "@factly/scooter-shared-utils": [
        "packages/scooter-shared-utils/src/index.js"
      ],
      "@factly/scooter-slash-command": [
        "packages/scooter-slash-command/src/index.js"
      ],
      "@factly/scooter-table": ["packages/scooter-table/src/index.js"],
      "@factly/scooter-tagore": ["packages/scooter-tagore/src/index.js"],
      "@factly/scooter-taskitem": ["packages/scooter-taskitem/src/index.js"],
      "@factly/scooter-tasklist": ["packages/scooter-tasklist/src/index.js"],
      "@factly/scooter-typography": ["packages/scooter-typography/src/index.js"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
